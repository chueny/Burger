<div class="container"> 
<div class ="text-center">
  <img src="/assets/img/burger.png" alt="BURGER"> </img>
  <h1>EAT-DA-BURGER!</h1>
</div>

<div class="burgers-to-be-devoured">
  <h4>Burgers are ready to be devoured!</h4>
<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li class="burger-list">
	      {{id}} {{burger_name}} 
	      <button class="devoured-burger" data-id="{{id}}">Devoured!</button>
    </li>
    {{/unless}}
    {{/each}}
</ul>

<div class="devoured-burgers"> 
<h4> Burgers already devoured!</h4>
<ul>
    {{#each burgers}}
    {{#if devoured}}
    <li class="devoured-burger-list">
         {{id}} {{burger_name}} 
    </li>
    {{/if}}
    {{/each}}
</ul>
</div>

<div class ="text-center">
<form class="create-form">
  <div class="form-group">
    <input type ="input" id="newBurger" name="name">
  </div>

  <button type="submit" >Add Burger</button>
  <p></p> 
  <p>Enter a burger that you want to eat.  Click on the "Submit" button.</p>
  <p></p> 
</form>
</div>
</div>